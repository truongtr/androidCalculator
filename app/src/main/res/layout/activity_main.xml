        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:text="0"
        android:gravity="right"
        android:textStyle="bold"
        android:padding="20dp"
        android:textSize="28dp"
        android:background="#517BF0"
        android:textColor="#ffffff"
